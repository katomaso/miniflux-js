{
	"compileOnSave": true,
	"compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"newLine": "LF",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noLib": false,
		"outDir": "build",
		"pretty": true,
		"removeComments": true,
		//"rootDir": "src",
		"sourceMap": true,
        "target": "ESNext"
	},
	// "filesGlob": [
	//	"src/**/*.ts"
	//],
    "include": [
        // "test/**/*.ts",
		"src/**/*.ts"
    ]
}
